<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Health Record Labeling Tool</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  <script src="https://code.jquery.com/jquery-3.5.0.min.js" integrity="sha256-xNzN2a4ltkB44Mc/Jz3pT4iU1cmeR0FkXs4pru/JxaQ=" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
  <script src="https://kit.fontawesome.com/32a73fbd75.js" crossorigin="anonymous"></script>
</head>

<body>

    <!-- =================================================== -->
    <!-- PAGE - to display login and signup inside container -->
    <!-- =================================================== -->
    <div class="container">

      <!------------------------------>
      <!-- PAGE - to display login -->
      <!------------------------------>
      <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6">

        <div class="panel panel-info">

          <div class="panel-heading">
            <div class="panel-title text-warning">Sign In</div>
            <!--div style="float:right; font-size: 80%; position: relative; top:-10px"><a href="#">Forgot password?</a></div -->
          </div>

          <div style="padding-top:10px" class="panel-body" >

            <form id="loginform" class="form-horizontal" role="form">

              <div style="margin-bottom: 25px" class="input-group">
                <i class="fas fa-user fa-2x"></i>
                <span class="input-group-addon" style="padding-left:15px;"></span>
                <input id="login-username" type="text" class="form-control" name="username" value="admin1" placeholder="username">
              </div>

              <div style="margin-bottom: 25px" class="input-group">
                <i class="fas fa-lock fa-2x"></i>
                <span class="input-group-addon" style="padding-left:15px;"></span>
                <input id="login-password" type="password" class="form-control" name="password" value="admin2020" placeholder="password">
              </div>

              <div style="margin-top:10px" class="text-center form-group">
                <!-- Button -->
                <div class="col-sm-12 controls">
                  <a id="btn-login" href="#" class="btn btn-success">Login  </a>
                </div>
              </div>

              <div class="form-group text-center">
                <div class="col-md-12 control">
                  <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%" >
                      Don't have an account!
                      <a href="#" onClick="$('#loginbox').hide(); $('#signupbox').show()">Sign Up Here</a>
                  </div>
                </div>
              </div>

            </form>

          </div> <!-- panel-body div -->

        </div> <!-- panel div -->

        <div class="card mainbox col-md-9 border-0">
          <div id="login-result-id" class="card-body"></div>
        </div>

      </div> <!-- loginbox div -->


      <!------------------------------>
      <!-- PAGE - to display signup -->
      <!------------------------------>
      <div id="signupbox" style="display:none; margin-top:50px" class="mainbox col-md-9">

        <div class="panel panel-info">

          <div class="panel-heading mainbox col-md-6">
            <div class="panel-title text-warning">Register</div>
            <div style="float:right; font-size: 85%; position: relative; top:-10px"><a id="signinlink" href="#" onclick="$('#signupbox').hide(); $('#login-result-id').hide(); $('#loginbox').show()">Sign In</a></div>
          </div>

          <div style="padding-top:10px" class="panel-body" >

            <form id="signupform" class="form-horizontal" role="form">

              <div style="margin-bottom: 25px" class="form-group">
                <div class="col-md-6">
                  <i class="fas fa-user fa-2x"></i>
                  <input id="signup-username" type="text" class="form-control" name="userId" placeholder="username">
                </div>
              </div>

              <div class="form-group">
                <div class="col-md-6">
                  <i class="fas fa-lock fa-2x"></i>
                  <input id="signup-password" type="password" class="form-control" name="passwd" placeholder="Password">
                </div>
              </div>

              <div class="form-group text-left">
                <!-- Button -->
                <div class="col-md-offset-3 col-md-9">
                  <button id="btn-signup" type="button" class="btn btn-info"><i class="icon-hand-right"></i>Sign Up</button>
                </div>
              </div>

            </form>

          </div> <!-- panel-body -->

        </div> <!-- panel -->

        <div class="card mainbox col-md-6 border-0">
          <div id="signup-result-id" class="card-body"></div>
        </div>

      </div> <!-- signupbox -->

    </div> <!-- container div -->



    <!-- ================================================= -->
    <!-- PAGE - to display cases and conditions -->
    <!-- ================================================= -->
    <div class="row d-flex justify-content-center">
      <div class="col-md-10">

        <div id="case-cond" style="display:none; margin-top:50px" class="mainbox col-md-10">
          <nav class="navbar navbar-light" style="background-color: #e9e9e9;">
            <i class="fas fa-notes-medical fa-2x"></i>
            <div id="logged-in-as" class="text-dark" style="float:right; font-size: 85%; position: relative;"></div>
          </nav>

          <div class="disp-body">
            <div class="card-deck">

              <div id="case-quote1" class="card" style="max-height: 500px;">
                <div class="card-header text-white bg-secondary mb-3">Please Review the Case</div>
                <div class="card-body overflow-auto bg-light mb-3">
                  <blockquote id="case-quote" class="blockquote mb-0">
                    <!-- populate the case history here from jQuery-->
                  </blockquote>
                </div>
                <div id="case-footer" class="card-footer text-warning bg-secondary mb-3" style="font-size: 75%; position: relative;"></div>
              </div>

              <div id="lg-id" class="card" style="max-height: 500px;">
                <div class="card-header text-white bg-secondary mb-3">Select Condition</div>
                <!-- populate the condition list here from jQuery -->
                <div class="list-group overflow-auto bg-light mb-3">
                </div>
              </div>

            </div> <!-- card-deck ends -->


            <div class="text-right col-md-10" style="margin-top:50px">
                <button id="btn-next" type="button" class="btn btn-info"><i class="icon-hand-right"></i> &nbsp Next Case</button>
            </div>

          </div> <!-- disp-body ends -->

        </div> <!-- case-cond ends -->

      </div> <!-- col ends -->

    </div><!-- row ends -->


    <!-- ================================================= -->
    <!-- PAGE - to display Done message -->
    <!-- ================================================= -->
    <div id="done-cond" style="display:none; margin-top:50px" class="text-center mainbox col-md-10">
      <div class="card">
        <div id="card-done-id" class="card-header bg-light mb-3"></div>
      </div>
    </div>



    <script src="client.js"></script>

  </body>
