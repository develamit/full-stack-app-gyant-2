<html lang="en">
<head>
  <meta charset="UTF-8">
  <!--meta name="viewport" content="width=device-width, initial-scale=1.0" -->
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Login - Gyant Health</title>
  <!--link href="//netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css"-->
  <!--script src="//code.jquery.com/jquery-1.11.1.min.js"></script -->
  <!--script src="//netdna.bootstrapcdn.com/bootstrap/3.1.0/js/bootstrap.min.js"></script -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  <script src="https://code.jquery.com/jquery-3.5.0.min.js" integrity="sha256-xNzN2a4ltkB44Mc/Jz3pT4iU1cmeR0FkXs4pru/JxaQ=" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>



</head>

<body>

    <!-- ================================================= -->
    <!-- PAGE - todisplay login and signup -->
    <!-- ================================================= -->
    <div class="container">

      <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">

        <div class="panel panel-info">

          <div class="panel-heading">
              <div class="panel-title">Sign In</div>
              <!--div style="float:right; font-size: 80%; position: relative; top:-10px"><a href="#">Forgot password?</a></div -->
          </div>

          <div style="padding-top:30px" class="panel-body" >
            <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>

            <form id="loginform" class="form-horizontal" role="form">

              <div style="margin-bottom: 25px" class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                <input id="login-username" type="text" class="form-control" name="username" value="admin1" placeholder="username">
              </div>

              <div style="margin-bottom: 25px" class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                <input id="login-password" type="password" class="form-control" name="password" value="admin2020" placeholder="password">
              </div>

              <div style="margin-top:10px" class="form-group">
                <!-- Button -->
                <div class="col-sm-12 controls">
                  <a id="btn-login" href="#" class="btn btn-success">Login  </a>
                </div>
              </div>

              <div class="form-group">
                <div class="col-md-12 control">
                  <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%" >
                      Don't have an account!
                      <a href="#" onClick="$('#loginbox').hide(); $('#signupbox').show()">Sign Up Here</a>
                  </div>
                </div>
              </div>

            </form>

          </div> <!-- panel-body div -->

        </div> <!-- panel div -->

      </div> <!-- loginbox div -->


        <div id="signupbox" style="display:none; margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">

          <div class="panel panel-info">

            <div class="panel-heading">
              <div class="panel-title">Sign Up</div>
              <div style="float:right; font-size: 85%; position: relative; top:-10px"><a id="signinlink" href="#" onclick="$('#signupbox').hide(); $('#loginbox').show()">Sign In</a></div>
            </div>

            <div class="panel-body" >

              <form id="signupform" class="form-horizontal" role="form">

                <div id="signupalert" style="display:none" class="alert alert-danger">
                  <p>Error:</p>
                  <span></span>
                </div>


                <div class="form-group">
                  <label for="userId" class="col-md-3 control-label">UserId</label>
                  <div class="col-md-9">
                    <input type="text" class="form-control" name="userId" placeholder="username">
                  </div>
                </div>

                <div class="form-group">
                  <label for="password" class="col-md-3 control-label">Password</label>
                  <div class="col-md-9">
                    <input type="password" class="form-control" name="passwd" placeholder="Password">
                  </div>
                </div>

                <div class="form-group">
                  <!-- Button -->
                  <div class="col-md-offset-3 col-md-9">
                    <button id="btn-signup" type="button" class="btn btn-info"><i class="icon-hand-right"></i> &nbsp Sign Up</button>
                  </div>
                </div>

              </form>

            </div> <!-- panel-body -->

          </div> <!-- panel -->

        </div> <!-- signupbox -->

    </div> <!-- container div -->



    <!-- ================================================= -->
    <!-- PAGE - todisplay cases and conditions -->
    <!-- ================================================= -->
    <div id="case-cond" style="display:none; margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
      <nav class="navbar navbar-dark bg-dark">
        <a class="navbar-brand">Health record labeling</a>
        <div id="logged-in-as" class="text-white" style="float:right; font-size: 85%; position: relative;"></div>
        <!--button class="btn btn-outline-success my-2 my-sm-0" type="submit">Log Out</button-->

      </nav>


        <div class="disp-body">

          <div class="card-deck">

            <div id="case-quote1" class="card" style="max-width: 700px; max-height: 500px;">
              <div class="card-header text-white bg-secondary mb-3">Please Review the Case</div>
              <div class="card-body overflow-auto bg-light mb-3">
                <blockquote id="case-quote" class="blockquote mb-0">
                  <!-- populate the case history here -->
                </blockquote>
              </div>
              <div id="case-footer" class="card-footer text-warning bg-secondary mb-3" style="font-size: 75%; position: relative;"></div>
            </div>

            <div id="lg-id" class="card" style="max-width: 700px; max-height: 500px;">
              <div class="card-header text-white bg-secondary mb-3">Select Condition</div>
              <!-- populate the list here from jquery -->
              <div class="list-group overflow-auto bg-light mb-3">
              </div>
            </div>

          </div> <!-- card-deck ends -->


          <div class="col-md-offset-3 col-md-9" style="margin-top:50px">
              <!--button id="btn-prev" type="button" class="btn btn-info"><i class="icon-hand-right"></i> &nbsp Prev Case</button-->
              <button id="btn-next" type="button" class="btn btn-info"><i class="icon-hand-right"></i> &nbsp Next Case</button>
          </div>

    </div>


    <!-- ================================================= -->
    <!-- PAGE - to display Done message -->
    <!-- ================================================= -->
    <div id="done-cond" style="display:none; margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
      <div class="card">
        <div id="card-done-id" class="card-header bg-light mb-3"></div>
      </div>
    </div>



    <script src="client.js"></script>

  </body>
